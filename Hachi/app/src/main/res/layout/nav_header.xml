<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@color/material_grey_700"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUserAvatar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/sailor"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"/>


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/civUserAvatar"
        android:layout_alignStart="@+id/civUserAvatar"
        android:layout_marginTop="16dp"
        android:layout_below="@id/civUserAvatar"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="@string/click_2_login"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/civUserAvatar"
        android:layout_alignStart="@+id/civUserAvatar"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tvUserName"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>


</RelativeLayout>