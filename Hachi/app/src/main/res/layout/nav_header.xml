<?xml version="1.0" encoding="utf-8"?>
<com.xfdingustc.far.FixedAspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="?attr/defaultBgColor"
    android:orientation="vertical"
    app:farfl_xratio="16dp"
    app:farfl_yratio="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/civUserAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/waylens_logo_76x86"
            app:civ_border_color="?attr/appTextColorPrimary"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/civUserAvatar"
            android:layout_alignStart="@+id/civUserAvatar"
            android:layout_below="@id/civUserAvatar"
            android:layout_marginTop="16dp"
            android:text="@string/click_2_login"
            android:textColor="?attr/appTextColorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/civUserAvatar"
            android:layout_alignStart="@+id/civUserAvatar"
            android:layout_below="@id/tvUserName"
            android:layout_marginTop="16dp"
            android:textColor="?attr/appTextColorPrimary"
            android:textSize="18sp" />

    </RelativeLayout>
</com.xfdingustc.far.FixedAspectRatioFrameLayout>