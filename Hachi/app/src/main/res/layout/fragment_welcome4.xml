<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackgroundLight"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="56dp"
        android:text="@string/welcome41"
        android:textAlignment="center"
        android:textColor="@color/app_text_color_primary_light"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/buy_waylens_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/welcome42"
        android:textAlignment="center"
        android:textColor="@color/style_color_accent"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/intro4"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">


        <CheckBox
            android:id="@+id/agree_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:buttonTint="@color/style_color_accent"
            android:checked="true"/>

        <TextView
            android:id="@+id/waylens_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/agree_check_box"
            android:textColor="@color/app_text_color_primary_light"
            tools:text="Agree with Waylens Agreement before you could use this app"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="?attr/actionButtonColor"
        android:text="@string/wake_up_camera"
        >
    </Button>

    <TextView
        android:id="@+id/withoutCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/without_camera"
        android:textColor="@color/app_text_color_primary_light"
        android:textSize="16sp"
        />

</LinearLayout>

