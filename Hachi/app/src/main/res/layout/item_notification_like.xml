<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/like_root_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/like_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/settings_profile_photo_default"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/like_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/HachiTextViewSubHeader"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="richardliang likes your post"/>

        <TextView
            android:id="@+id/like_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_color_secondary"
            android:textSize="14dp"
            tools:text="Just now"/>
    </LinearLayout>

    <com.xfdingustc.far.FixedAspectRatioFrameLayout
        android:id="@+id/video_fragment_container"
        android:layout_width="72dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:farfl_xratio="16dp"
        app:farfl_yratio="9dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.12"
            android:background="@drawable/stroke_rect"></FrameLayout>

        <ImageView
            android:id="@+id/moment_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"/>

    </com.xfdingustc.far.FixedAspectRatioFrameLayout>


</LinearLayout>