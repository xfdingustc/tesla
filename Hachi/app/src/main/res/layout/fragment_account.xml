<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/material_grey_300"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@color/material_blue_grey_700">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnAvatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:src="@drawable/sailor"
            app:border_color="@color/material_grey_200"
            app:border_width="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAvatar"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="@string/login"
            android:textSize="24sp"
            android:textColor="@color/material_grey_300"/>

    </RelativeLayout>


</LinearLayout>