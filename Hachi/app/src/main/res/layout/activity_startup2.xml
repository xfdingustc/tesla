<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:text="@string/skip"
        android:textAllCaps="true"
        android:textColor="@color/app_text_color_primary"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Establishing a connection between your phone and Waylens camera is very straightforward - simply have you phone join the camera's built-in Wi-Fi hotspot through System Settings"/>


    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        style="@style/HachiTextViewSubHeader"
        android:text="Option 1(Recommanded): Start by Scanning the QR Code"/>


    <ImageView
        android:id="@+id/step1_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:src="@drawable/steps_image_1"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGetStarted"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="We recommend using the QR code, especially for the first-time setup, because it saves you from manual inputs."/>

    <Button
        android:id="@+id/btnGetStarted"
        style="@style/ActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Scan the QR code ->"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"
        android:text="@string/or"
        android:layout_gravity="center_horizontal"
        android:textColor="?attr/appTextColorPrimary"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/manualSelectWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        style="@style/HachiTextViewSubHeader"
        android:text="@string/manually_select_wifi_network"
        android:textColor="?attr/appTextColorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="You will manually select the camera's hotspot and type in the password through system settings"/>




</LinearLayout>