<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/app_text_color_primary"/>


        <TextView
            style="@style/HachiTextViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/start_up_text_line1"/>


        <TextView
            android:id="@+id/text2"
            style="@style/HachiTextViewSubHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/start_up_text_option1"/>


        <ImageView
            android:id="@+id/step1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:src="@drawable/steps_image_1"/>

        <TextView
            android:id="@+id/text3"
            style="@style/HachiTextViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnGetStarted"
            android:layout_marginBottom="32dp"
            android:text="@string/start_up_text_line2"/>

        <Button
            android:id="@+id/btnGetStarted"
            style="@style/ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/scan_qr_code"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/settings_line_separator"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/or"
                android:textColor="?attr/appTextColorPrimary"
                android:textSize="16sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/settings_line_separator"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/manualSelectWifi"
            style="@style/HachiTextViewSubHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/manually_select_wifi_network"
            android:textColor="?attr/appTextColorPrimary"/>

        <TextView
            style="@style/HachiTextViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_up_text_line3"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>
</ScrollView>