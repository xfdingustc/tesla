<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/windowBackground"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground"
        android:orientation="vertical"
        tools:background="@color/material_grey_700">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            tools:src="@drawable/menu_profile_photo_default"/>


        <TextView
            android:id="@+id/title"
            style="@style/HachiTextViewSubHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Night video test! Figured out my no sound issue. Camera kept reverting my changes to unmute"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_avatar"
            android:layout_gravity="top"
            android:layout_toRightOf="@id/user_avatar"
            android:textColor="@color/app_text_color_primary"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="xfding"/>


        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/user_avatar"
            android:layout_below="@id/user_name"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/user_avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/app_text_color_secondary"
            tools:text="4 days ago  â€¢ Shanghai China"/>

        <com.xfdingustc.far.FixedAspectRatioFrameLayout
            android:id="@+id/video_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/title"
            app:farfl_xratio="16dp"
            app:farfl_yratio="9dp">


            <ImageView
                android:id="@+id/video_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_recommend_for_you"
                />


            <TextView
                android:id="@+id/video_duration"
                style="@style/HachiTextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="@drawable/round_rectangle_background"
                android:textColor="@android:color/white"
                tools:text="01:08"/>
        </com.xfdingustc.far.FixedAspectRatioFrameLayout>

        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_fragment_container"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageButton
                android:id="@+id/btn_like"
                style="@style/SelectableRippleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/social_like"/>

            <TextSwitcher
                android:id="@+id/ts_like_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="888"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TextSwitcher>

            <ImageButton
                android:id="@+id/btn_comment"
                style="@style/SelectableRippleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/social_comment"/>

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="999"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <ImageButton
                android:id="@+id/btn_more"
                style="@style/SelectableRippleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:src="@drawable/social_more"/>


            <TextView
                android:id="@+id/btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/follow"
                android:textAllCaps="true"
                android:textColor="@color/style_color_accent"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_action_bar"
            android:orientation="vertical">

            <View
                android:id="@+id/separator"
                style="@style/HachiSepatator"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/comment_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                tools:text="xfding Night video test! Figured out my no sound issue. Camera kept reverting my changes to unmute"
                />


            <TextView
                android:id="@+id/comment_user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_user1"
                android:layout_marginLeft="16dp"
                tools:text="xfding beatiful"
                />


            <TextView
                android:id="@+id/comment_user3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_user2"
                android:layout_marginLeft="16dp"
                tools:text="xfding beatiful"/>

            <View
                android:id="@+id/bottom_padding"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>