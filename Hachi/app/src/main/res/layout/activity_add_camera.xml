<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/simpleTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/overlay"
            android:drawableLeft="@drawable/null_title_icon"
            android:drawableStart="@drawable/null_title_icon"
            android:text="@string/title_activity_add_camera" >
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" >

            <com.transee.common.ViewfinderView
                android:id="@+id/viewfinderView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:borderColor="#40000000"
                app:borderSizeX="16dp"
                app:borderSizeY="32dp" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                layout="@layout/group_explosure" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#40000000"
            android:gravity="center"
            android:text="@string/info_focus_barcode"
            android:textColor="@color/titleText"
            android:textSize="18sp" />
    </LinearLayout>

</merge>