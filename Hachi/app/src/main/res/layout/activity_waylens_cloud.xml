<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_default"/>

    <TextView
        android:id="@+id/hd_info"
        style="@style/HachiTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Full HD"/>

    <TextView
        android:id="@+id/hd_duration"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="duration"/>

    <TextView
        android:id="@+id/hd_size"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="size"/>

    <TextView
        android:id="@+id/hd_count"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="count"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/settings_line_separator"></View>

    <TextView
        android:id="@+id/sd_info"
        style="@style/HachiTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="SD"/>


    <TextView
        android:id="@+id/sd_duration"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="duration"/>

    <TextView
        android:id="@+id/sd_size"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="size"/>

    <TextView
        android:id="@+id/sd_count"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="count"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/settings_line_separator"></View>


    <TextView
        android:id="@+id/all_info"
        style="@style/HachiTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="All"/>

    <!--<FrameLayout-->
    <!--android:id="@+id/fragment_container"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"></FrameLayout>-->

    <TextView
        android:id="@+id/all_duration"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="duration"/>

    <TextView
        android:id="@+id/all_size"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="size"/>

    <TextView
        android:id="@+id/all_count"
        style="@style/HachiTextViewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        tools:text="count"/>
</LinearLayout>