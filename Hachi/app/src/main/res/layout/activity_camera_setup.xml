<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleBar"
        style="@style/simpleTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/null_title_icon"
        android:drawableStart="@drawable/null_title_icon"
        android:text="@string/title_activity_camera_setup" >
    </TextView>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >

            <RelativeLayout
                android:id="@+id/layoutCameraName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/dropdown_small" />

                <TextView
                    android:id="@+id/dialogTitle"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:layout_toStartOf="@+id/imageView1"
                    android:text="@string/lable_camera_name"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textCameraName"
                    style="@style/prefValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dialogTitle"
                    android:layout_alignStart="@+id/dialogTitle"
                    android:layout_below="@+id/dialogTitle"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:layout_toStartOf="@+id/imageView1"
                    android:text="@string/unkown_text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <LinearLayout
                android:id="@+id/layoutBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView6"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lable_battery_state"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/empty_text"
                        android:src="@drawable/battery_low" />

                    <View
                        style="@style/vertSeparator"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textBatteryInfo"
                        style="@style/prefInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/empty_text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/horzSeparator" />

            <LinearLayout
                android:id="@+id/layoutStorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lable_storage_space"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal" >

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="48dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="8dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="10dp"
                        android:progress="20"
                        android:progressDrawable="@drawable/volume" />

                    <TextView
                        android:id="@+id/textStorageInfo"
                        style="@style/prefInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/empty_text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/horzSeparator" />

            <RelativeLayout
                android:id="@+id/layoutVideoResolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/dropdown_small" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textVideoResolution"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textVideoResolution"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:layout_toStartOf="@+id/imageView2"
                    android:text="@string/lable_video_resolution"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textVideoResolution"
                    style="@style/prefValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:layout_toStartOf="@+id/imageView2"
                    android:text="@string/unkown_text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <RelativeLayout
                android:id="@+id/layoutVideoQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/dropdown_small" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView3"
                    android:layout_toStartOf="@+id/imageView3"
                    android:text="@string/lable_video_quality"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textVideoQuality"
                    style="@style/prefValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:layout_toLeftOf="@+id/imageView3"
                    android:layout_toStartOf="@+id/imageView3"
                    android:text="@string/unkown_text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <RelativeLayout
                android:id="@+id/layoutColorMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/dropdown_small" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toStartOf="@+id/imageView4"
                    android:text="@string/lable_color_mode"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textColorMode"
                    style="@style/prefValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toStartOf="@+id/imageView4"
                    android:text="@string/unkown_text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <RelativeLayout
                android:id="@+id/layoutAutoRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <CheckBox
                    android:id="@+id/checkBoxAutoRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/checkBoxAutoRecord"
                    android:layout_toStartOf="@+id/checkBoxAutoRecord"
                    android:text="@string/lable_auto_record"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView18"
                    style="@style/prefHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView7"
                    android:layout_toLeftOf="@+id/checkBoxAutoRecord"
                    android:layout_toStartOf="@+id/checkBoxAutoRecord"
                    android:text="@string/lable_auto_record_hint"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <RelativeLayout
                android:id="@+id/layoutAutoDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <CheckBox
                    android:id="@+id/checkBoxAutoDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/textView8"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/checkBoxAutoDelete"
                    android:layout_toStartOf="@+id/checkBoxAutoDelete"
                    android:text="@string/lable_loop_record"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView17"
                    style="@style/prefHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView8"
                    android:layout_toLeftOf="@+id/checkBoxAutoDelete"
                    android:layout_toStartOf="@+id/checkBoxAutoDelete"
                    android:text="@string/lable_loop_record_hint"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <RelativeLayout
                android:id="@+id/layoutMuteAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <CheckBox
                    android:id="@+id/checkBoxEnableMic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lable_enable_mic"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <LinearLayout
                android:id="@+id/layoutVideoOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="8dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="8dp" >

                <TextView
                    android:id="@+id/textView14"
                    style="@style/prefTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/lable_video_overlay"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/toright" />
            </LinearLayout>

            <View style="@style/horzSeparator" />

            <LinearLayout
                android:id="@+id/layoutSyncDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="8dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="8dp" >

                <TextView
                    android:id="@+id/textView15"
                    style="@style/prefTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/lable_sync_time"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/dropdown_small" />
            </LinearLayout>

            <View style="@style/horzSeparator" />

            <LinearLayout
                android:id="@+id/layoutWIFIMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/prefTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lable_wifi_mode"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/wifiModeText"
                        style="@style/prefValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unkown_text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/toright" />
            </LinearLayout>

            <View style="@style/horzSeparator" />

            <RelativeLayout
                android:id="@+id/layoutBluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp" >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/toright" />

                <TextView
                    android:id="@+id/textView21"
                    style="@style/prefTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView11"
                    android:layout_toStartOf="@+id/imageView11"
                    android:text="@string/lable_bluetooth"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textBtSupport"
                    style="@style/prefValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView21"
                    android:layout_toLeftOf="@+id/imageView11"
                    android:layout_toStartOf="@+id/imageView11"
                    android:text="@string/unkown_text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View style="@style/horzSeparator" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/group_camera_setup_version" />

            <View style="@style/horzSeparator" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>