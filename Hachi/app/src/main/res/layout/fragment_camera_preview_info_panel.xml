<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/infoPanel"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:alpha="0.9"
              android:background="@color/windowBackground"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_sd_card"
            android:tint="@color/app_text_color_primary"/>

        <TextView
            android:id="@+id/tv_space_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/app_text_color_primary"
            tools:text="3.9GB ready to record"/>

        <ImageView
            android:id="@+id/remote_ctrl"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:src="@drawable/rec_info_remote_control_on"/>


        <ImageView
            android:id="@+id/obd"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/rec_info_obd_on"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/gpsStatus"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/gps_off"
            android:gravity="center_vertical"
            android:tint="@color/app_text_color_primary"/>

        <ImageView
            android:id="@+id/ivBatterStatus"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_battery_unknown"
            android:tint="@color/app_text_color_primary"/>


        <TextView
            android:id="@+id/tvBatteryVol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="100%"
            android:textColor="@color/text_camera_info"/>


    </LinearLayout>

    <com.waylens.hachi.ui.views.AnimationProgressBar
        android:id="@+id/storageView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"></com.waylens.hachi.ui.views.AnimationProgressBar>


    <ImageView
        android:id="@+id/pull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:src="@drawable/ic_expand_more"
        android:tint="@color/app_text_color_primary"/>


</LinearLayout>