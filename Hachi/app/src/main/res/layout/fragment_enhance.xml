<?xml version="1.0" encoding="utf-8"?>
<com.waylens.hachi.ui.views.BarrierLinearLayout
    android:id="@+id/enhance_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_toolbar"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_gauge"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/btn_enhance_gauge"/>

        <ImageView
            android:id="@+id/btn_add_video"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/btn_enhance_addvideo"/>

        <ImageView
            android:id="@+id/btn_music"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/btn_enhance_music"/>

        <ImageView
            android:id="@+id/btn_smart_remix"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/btn_enhance_music"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

        <LinearLayout
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/gauge_indicator_on"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/gauge_indicator_off"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout android:id="@+id/enhance_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="256dp"/>
    <RelativeLayout
        android:id="@+id/enhance_action_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ViewAnimator
            android:id="@+id/view_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/clips_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            tools:text="1 Clip"/>
            <org.florescu.android.rangeseekbar.RangeSeekBar
                android:id="@+id/range_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                rsb:barHeight="4dp"
                rsb:showLabels="false"
                rsb:valuesAboveThumbs="false"/>
        </ViewAnimator>
        <com.waylens.hachi.ui.views.clipseditview.ClipsEditView
            android:id="@+id/clips_edit_view"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_below="@id/view_animator"
            android:layout_marginTop="16dp">
        </com.waylens.hachi.ui.views.clipseditview.ClipsEditView>
    </RelativeLayout>
</com.waylens.hachi.ui.views.BarrierLinearLayout>