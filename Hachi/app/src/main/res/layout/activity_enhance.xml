<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/enhance_root_view"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/toolbar_default"/>

    <FrameLayout
        android:id="@+id/player_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        tools:layout_height="275dp"/>

    <View
        style="@style/HachiSepatator"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        />

    <com.waylens.hachi.ui.clips.cliptrimmer.VideoTrimmer
        android:id="@+id/clipTrimmer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        />

    <FrameLayout
        android:id="@+id/enhance_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
