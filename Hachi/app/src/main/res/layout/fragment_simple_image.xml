<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">




    <ImageView
        android:id="@+id/imageCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/policy_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="gone">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">


            <CheckBox
                android:id="@+id/agree_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:buttonTint="@color/style_color_accent"
                android:checked="true"/>

            <TextView
                android:id="@+id/waylens_agreement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/wake_up_camera"
            android:textSize="14sp"
            android:background="@color/style_color_accent">
        </Button>

        <TextView
            android:id="@+id/withoutCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/without_camera"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:textColor="?attr/appTextColorPrimary"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/top_shade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topshade"
        android:scaleType="centerCrop"
        android:layout_gravity="top"
        tools:visibility="gone"/>


    <ImageView
        android:id="@+id/bottom_shade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bottomshade"
        android:scaleType="centerCrop"
        android:layout_gravity="bottom"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="64dp"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        tools:text="Effortlessly select the best moments of your footage and create a compelling story about your drive"/>


</FrameLayout>