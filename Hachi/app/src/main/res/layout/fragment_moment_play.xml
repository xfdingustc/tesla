<?xml version="1.0" encoding="utf-8"?>
<com.xfdingustc.far.FixedAspectRatioFrameLayout
    android:id="@+id/video_root_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:farfl_xratio="16dp"
    app:farfl_yratio="9dp">


    <SurfaceView
        android:id="@+id/video_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"/>

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/video_controllers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.xfdingustc.mdplaypausebutton.PlayPauseButton
            android:id="@+id/btn_play_pause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center">

        </com.xfdingustc.mdplaypausebutton.PlayPauseButton>
    </FrameLayout>

    <com.waylens.hachi.ui.views.GaugeView
        android:id="@+id/gaugeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"></com.waylens.hachi.ui.views.GaugeView>


    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/style_color_primary"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/infoPanel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#7f000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_video_time"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="start"
            android:text="00:00"
            android:textColor="#fff"/>


        <SeekBar
            android:id="@+id/video_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:progressTint="@color/style_color_primary"
            android:thumbTint="@color/style_color_primary"
            tools:progress="50"/>

        <TextView
            android:id="@+id/text_video_duration"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="00:00"
            android:textColor="#fff"/>

        <ImageButton
            android:id="@+id/btnShowOverlay"
            style="@style/SelectableRippleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:src="@drawable/btn_gauge_overlay"/>

        <ImageButton
            android:id="@+id/btn_fullscreen"
            style="@style/SelectableRippleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@null"
            android:src="@drawable/screen_full"
            tools:ignore="RtlHardcoded"/>

    </LinearLayout>

</com.xfdingustc.far.FixedAspectRatioFrameLayout>

