<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/edit_toolbar">

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/ic_info_white_36dp"/>

        <TextView
            android:id="@+id/title"
            style="@style/Base.TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Live View"
            android:textAllCaps="true"/>

        <ImageView
            android:id="@+id/btn_mode"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/ic_switch_video_white_36dp"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tvCameraStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Continuous Recording"/>

            <TextView
                android:id="@+id/tv_status_additional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_enhance"
                android:textSize="12sp"
                tools:text="300 bookmarks remain"/>
        </LinearLayout>
    </LinearLayout>

    <com.xfdingustc.far.FixedAspectRatioFrameLayout
        android:id="@+id/liveViewLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        app:farfl_xratio="16dp"
        app:farfl_yratio="9dp">

        <com.waylens.hachi.views.camerapreview.CameraLiveView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.waylens.hachi.views.dashboard.DashboardLayout
            android:id="@+id/dashboard"
            android:layout_width="1920px"
            android:layout_height="1080px"
            android:layout_gravity="center"
            android:visibility="invisible"
            tools:visibility="gone">
        </com.waylens.hachi.views.dashboard.DashboardLayout>


    </com.xfdingustc.far.FixedAspectRatioFrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageButton
            android:id="@+id/btnMicControl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_mic_white_24dp"/>


        <ImageButton
            android:id="@+id/btnFullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_fullscreen_white_24dp"/>

        <ImageButton
            android:id="@+id/btnWaterLine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnFullscreen"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_border_all_white_24dp"/>


        <ImageButton
            android:id="@+id/btnShowOverlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnWaterLine"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_av_timer_white_24dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_toolbar"/>
    
    
    <com.waylens.hachi.ui.views.PercentageView
        android:id="@+id/storageView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="16dp"
        app:defaultColor="@color/btn_unable_color"
        app:categoryOneColor="@color/storage_used"
        app:categoryTwoColor="@color/storage_unused"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabBookmark"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            android:src="@drawable/ic_bookmark_white_48dp"/>
    </FrameLayout>

</LinearLayout>