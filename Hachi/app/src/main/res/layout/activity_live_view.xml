<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windowBackground"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:elevation="@dimen/default_elevation"
        app:layout_scrollFlags="scroll"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/fragment_camera_preview_info_panel"/>


        <com.xfdingustc.far.FixedAspectRatioFrameLayout
            android:id="@+id/liveViewLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/infoPanel"
            android:clipChildren="false">


            <com.xfdingustc.mjpegview.library.MjpegView
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <FrameLayout
                android:id="@+id/statusErrorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infoPanel">


                <include layout="@layout/fragment_camera_preview_status_panel"/>


                <include layout="@layout/fragment_camera_preview_error_panel"/>

            </FrameLayout>

            <com.waylens.hachi.view.gauge.GaugeView
                android:id="@+id/gaugeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            </com.waylens.hachi.view.gauge.GaugeView>


        </com.xfdingustc.far.FixedAspectRatioFrameLayout>


        <RelativeLayout android:id="@+id/controlPanel"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/liveViewLayout"
                        android:alpha="0.8"
                        android:background="#222428">

            <ImageButton
                android:id="@+id/btnMicControl"
                style="@style/SelectableRippleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:src="@drawable/ic_mic"
                android:tint="@color/app_text_color_primary"/>


            <ImageButton
                android:id="@+id/btnFullscreen"
                style="@style/SelectableRippleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:src="@drawable/ic_fullscreen"
                android:tint="@color/app_text_color_primary"/>


            <ImageButton
                android:id="@+id/btnShowOverlay"
                style="@style/SelectableRippleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btnFullscreen"
                android:padding="12dp"
                android:src="@drawable/ic_btn_gauge_overlay_n"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shutter_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/controlPanel"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageButton
                    android:id="@+id/fabStartStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/camera_control_start"/>

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageButton
                    android:id="@+id/btnBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/fabStartStop"
                    android:background="@android:color/transparent"
                    android:src="@drawable/camera_control_bookmark"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </FrameLayout>







        </LinearLayout>


        <LinearLayout
            android:id="@+id/detail_info_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoPanel"
            android:background="@color/windowBackgroundDark"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:background="@color/style_color_accent"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/highlights"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/highlight_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_text_color_primary"
                    tools:text="12.1GB"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:background="@color/second_progress_color"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Loop Recording Space"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/loop_record_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_text_color_primary"
                    tools:text="3.9GB"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/detail_remote"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/rec_info_remote_control_on"></ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Remote Control"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/remote_ctrl_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_text_color_primary"
                    tools:text="ON"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/detail_obd"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/rec_info_obd_on"></ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="OBD"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/obd_ctrl_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_text_color_primary"
                    tools:text="ON"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/detail_gps"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_gps_fixed"
                    android:tint="@color/app_text_color_primary"></ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="GPS"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/gps_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_text_color_primary"
                    tools:text="ON"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/wifiMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/rec_info_camera_mode_ap"/>

            <TextView
                android:id="@+id/wifi_mode_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/app_text_color_primary"
                tools:text="Your phone is directly connected to camera"/>

            <ImageView
                android:id="@+id/push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:rotation="180"
                android:src="@drawable/ic_expand_more"
                android:tint="@color/app_text_color_primary"/>


        </LinearLayout>

        <include layout="@layout/fragment_camera_connect"/>
    </RelativeLayout>


</LinearLayout>