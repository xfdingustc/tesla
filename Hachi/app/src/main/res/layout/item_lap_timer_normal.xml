<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/laptimer_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_camera_info"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Lap 4"
        />

    <ProgressBar
        android:id="@+id/pb_duration"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/lap_timer_progressbar"
        android:layout_centerVertical="true"
        android:layout_height="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/tv_title"
        android:layout_toStartOf="@+id/tv_duration"
        android:max="100"
        android:progress="60"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@id/tv_duration"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:text="00:00"
        android:textSize="14sp"
        android:textColor="@color/app_text_color_secondary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/separateColor"
        android:layout_alignParentBottom="true" />
</RelativeLayout>