<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
    </FrameLayout>


    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/spaceNaviationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:space_background_color="?attr/defaultBgColorDark"
        app:active_item_color="@color/style_color_accent"
        app:centre_button_color="@color/style_color_accent"
        app:centre_button_icon_color="@android:color/white"
        android:layout_gravity="bottom"/>



</FrameLayout>