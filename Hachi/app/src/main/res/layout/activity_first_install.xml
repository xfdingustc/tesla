<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/windowBackgroundLight">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/walkthrough_next"
        android:layout_gravity="bottom|center_horizontal"
        android:tint="@color/app_text_color_primary"
        android:layout_marginBottom="32dp"/>


    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:layout_gravity="end"
        android:textAllCaps="true"
        android:textColor="@color/app_text_color_primary_light"
        android:background="@drawable/skip_background"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:id="@+id/ll_point_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:layout_margin="8dip"
            android:src="@drawable/selector_page_point"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:layout_margin="8dip"
            android:src="@drawable/selector_page_point"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:layout_margin="8dip"
            android:src="@drawable/selector_page_point"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:layout_margin="8dp"
            android:src="@drawable/selector_page_point"/>




    </LinearLayout>

</FrameLayout>