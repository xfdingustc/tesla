<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:animateLayoutChanges="false"
    android:minHeight="64dp"
    android:orientation="vertical">

    <com.waylens.hachi.ui.views.CameraVideoView
        android:id="@+id/video_editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:visibility="gone"
        app:farfl_xratio="16dp"
        app:farfl_yratio="9dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.waylens.hachi.ui.clips.cliptrimmer.VideoTrimmer
            android:id="@+id/clip_film_view"
            android:layout_width="match_parent"
            android:layout_height="64dp"/>

        <TextView
            android:id="@+id/video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_enhance"
            tools:text="01:08"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:background="@color/edit_background"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btn_enhance"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:padding="6dp"
            android:contentDescription="@null"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/btn_edit_action_video"/>

        <ImageView
            android:id="@+id/btn_add_to_story"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:padding="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/btn_edit_action_insert"/>

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="32dp"
            android:padding="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/btn_edit_action_share"/>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="16dp"
            android:padding="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/btn_edit_action_delete"/>
    </LinearLayout>


</LinearLayout>