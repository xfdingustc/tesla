<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:id="@+id/connectIndicator"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/connection_left"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:tint="@color/style_color_accent"
        android:layout_toLeftOf="@id/connectIndicator"
        android:src="@drawable/new_logo"/>


    <ImageView
        android:id="@+id/connection_right"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/connectIndicator"
        android:src="@drawable/ic_facebook_enable"/>

</RelativeLayout>