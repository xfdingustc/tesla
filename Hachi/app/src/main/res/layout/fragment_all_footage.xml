<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:toolsNs="http://schemas.android.com/apk/res-auto"
              android:background="?attr/defaultBgColor"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



        <ImageButton
            android:id="@+id/btnAddBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:src="@drawable/btn_enhance_addbookmark"
            android:background="@android:color/transparent"/>


    <com.waylens.hachi.ui.views.cliptrimmer.ClipSetProgressBar
        android:id="@+id/clipSetPrgressBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"></com.waylens.hachi.ui.views.cliptrimmer.ClipSetProgressBar>

</LinearLayout>