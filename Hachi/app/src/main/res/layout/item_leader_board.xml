<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/lay_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.waylens.hachi.ui.views.AvatarView
        android:id="@+id/user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/menu_profile_photo_default"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">

    </com.waylens.hachi.ui.views.AvatarView>
    <TextView
        android:id="@+id/user_name"
        style="@style/HachiTextViewSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/user_avatar"
        app:layout_constraintTop_toTopOf="@+id/user_avatar"
        tools:text="xfding"/>


    <TextView
        android:id="@+id/vehicle_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_text_color_secondary"
        android:textSize="14sp"
        tools:text="BMW"
        app:layout_constraintLeft_toLeftOf="@+id/user_name"
        app:layout_constraintBottom_toBottomOf="@+id/user_avatar"/>

    <TextView
        android:id="@+id/race_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/app_text_color_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10.5s"
        app:layout_constraintRight_toLeftOf="@+id/leaderboard_play"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/leaderboard_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/btn_leaderboard_play_n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/separateColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view"/>

    <TextView
        android:id="@+id/user_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:background="@drawable/chip_shape"
        android:gravity="center"
        android:textSize="12sp"
        tools:text="123"
        app:layout_constraintRight_toRightOf="@+id/user_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/user_avatar"/>


</android.support.constraint.ConstraintLayout>