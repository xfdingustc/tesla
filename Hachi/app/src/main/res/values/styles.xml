<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_primary</item>
        <item name="toolbarColor">@color/style_color_primary</item>
        <item name="defaultBgColor">@color/material_grey_200</item>
        <item name="defaultBgColorDark">@color/material_grey_700</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_primary</item>
        <item name="toolbarColor">@color/style_color_primary_dark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="defaultBgColor">@color/windowBackground</item>
        <item name="defaultBgColorDark">@color/windowBackgroundDark</item>
        <item name="defaultDialogBgColor">@color/dialogBackground</item>
        <item name="appTextColorPrimary">@color/app_text_color_primary</item>
        <item name="appTextColorSecondary">@color/app_text_color_secondary</item>
        <item name="appTextColorDisabled">@color/app_text_color_disabled</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeCloseDrawable">@drawable/navbar_close</item>
        <item name="actionModeStyle">@style/Styled.ActionMode</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@color/app_text_color_disabled</item>
        <item name="colorControlNormal">@color/app_color_control_normal</item>
        <item name="colorControlActivated">@color/app_color_control_activated</item>
    </style>

    <style name="Styled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/material_blue_500</item>
    </style>

    <style name="MyRadioButton"
           parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>

    <style name="ClipPlaySeekbar" parent="LightTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Widget.AppCompat.Button.Hachi" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
    </style>



</resources>