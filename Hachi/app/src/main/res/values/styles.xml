<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/material_deep_orange_700</item>
        <item name="colorAccent">@color/material_deep_purple_a200</item>
        <item name="toolbarColor">@color/material_deep_orange_500</item>
        <item name="defaultBgColor">@color/windowBackgroundLight</item>
        <item name="android:windowBackground">@color/windowBackgroundLight</item>
        <item name="defaultBgColorDark">@color/windowBackgroundDarkLight</item>
        <item name="appTextColorPrimary">@color/app_text_color_primary_light</item>
        <item name="appTextColorSecondary">@color/app_text_color_secondary_light</item>
        <item name="appTextColorDisabled">@color/app_text_color_disabled_light</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close_black</item>
        <item name="colorControlActivated">@color/style_color_accent</item>
        <item name="actionButtonColor">@color/material_deep_orange_500</item>
        <item name="signinLogoColor">@color/material_deep_orange_500</item>
        <item name="separateColor">#1E000000</item>
        <item name="actionBarSize">56dp</item>
        <item name="momentPlaceHolderColor">#e5e5e5</item>
        <item name="overtureBgColor">@color/material_deep_orange_500</item>
        <item name="overtureLogoTint">@android:color/white</item>
        <item name="cardViewBgColor">@null</item>
        <item name="tagBgColor">@color/white87</item>
        <item name="tagTextColor">@color/black87</item>
        <item name="foregroundActiveColor">@android:color/white</item>
        <item name="avatarPlaceHolderColor">#ffe0e0e0</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="toolbarColor">@color/toolbar_color</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="defaultBgColor">@color/windowBackground</item>
        <item name="defaultBgColorDark">@color/windowBackgroundDark</item>
        <item name="defaultDialogBgColor">@color/dialogBackground</item>
        <item name="appTextColorPrimary">@color/app_text_color_primary</item>
        <item name="appTextColorSecondary">@color/app_text_color_secondary</item>
        <item name="appTextColorDisabled">@color/app_text_color_disabled</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionModeStyle">@style/Styled.ActionMode</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@color/app_text_color_disabled</item>
        <item name="colorControlNormal">@color/app_color_control_normal</item>
        <item name="colorControlActivated">@color/style_color_accent</item>
        <item name="actionButtonColor">@color/style_color_accent</item>
        <item name="signinLogoColor">@android:color/white</item>
        <item name="separateColor">#1EFFFFFF</item>
        <item name="actionBarSize">48dp</item>
        <item name="momentPlaceHolderColor">@color/windowBackground</item>
        <item name="overtureBgColor">@color/windowBackground</item>
        <item name="overtureLogoTint">@color/app_text_color_primary</item>
        <item name="cardViewBgColor">@color/windowBackground</item>
        <item name="tagBgColor">@color/black87</item>
        <item name="tagTextColor">@color/white87</item>
        <item name="foregroundActiveColor">@color/windowBackgroundDark</item>
        <item name="avatarPlaceHolderColor">@color/material_grey_600</item>
    </style>



    <style name="Styled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/toolbarColor</item>
    </style>

    <style name="MyRadioButton"
           parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>

    <style name="ActionButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/action_button_default_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SelectableRippleButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SelectableRippleLayout">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ClipPlaySeekbar" parent="LightTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>




    <style name="Widget.AppCompat.Button.Hachi" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.Hachi" parent="android:Widget"/>

    <style name="Widget.Hachi.DialogText">
        <item name="android:textAppearance">@style/TextAppearance.DialogContent</item>
        <item name="lineHeightHint">20sp</item>
    </style>

    <style name="HachiTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/appTextColorPrimary</item>
    </style>

    <style name="HachiTextViewHeadline" parent="HachiTextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HachiTextViewTitle" parent="HachiTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HachiTextViewSubHeader" parent="HachiTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HachiTextViewBody" parent="HachiTextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HachiTextViewCaption" parent="HachiTextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HachiSepatator">
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">0.12</item>
    </style>



    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_context_menu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_colorNormal">#FFB805</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>

    <style name="RemixMenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/hachi</item>
        <item name="backgroundTint">@color/hachi</item>
        <item name="rippleColor">@color/hachi</item>
    </style>

</resources>