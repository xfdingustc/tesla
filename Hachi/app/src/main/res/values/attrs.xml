<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ViewfinderView">
        <attr name="borderColor" format="color" />
        <attr name="borderSizeX" format="dimension" />
        <attr name="borderSizeY" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ViditImageView">
        <attr name="image" format="reference" />
        <attr name="pressedImage" format="reference" />
        <attr name="noBackground" format="boolean" />
        <attr name="showText" />
    </declare-styleable>
    <declare-styleable name="OverlayImageView">
        <attr name="overlayDrawable" format="reference" />
        <attr name="overlayAlpha" format="integer" />
        <attr name="overlayEnabled" format="boolean" />
        <attr name="overlayVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GaugeView">
        <attr name="showOuterShadow" format="boolean" />
        <attr name="showOuterBorder" format="boolean" />
        <attr name="showOuterRim" format="boolean" />
        <attr name="showInnerRim" format="boolean" />
        <attr name="showNeedle" format="boolean" />
        <attr name="showScale" format="boolean" />
        <attr name="showRanges" format="boolean" />
        <attr name="showText" />
        <attr name="outerShadowWidth" format="float" />
        <attr name="outerBorderWidth" format="float" />
        <attr name="outerRimWidth" format="float" />
        <attr name="innerRimWidth" format="float" />
        <attr name="innerRimBorderWidth" format="float" />
        <attr name="needleWidth" format="float" />
        <attr name="needleHeight" format="float" />

        <attr name="scalePosition" format="float" />
        <attr name="startValue" format="float" />
        <attr name="endValue" format="float" />
        <attr name="scaleStartAngle" format="float" />
        <attr name="scaleEndAngle" format="float" />
        <attr name="divisions" format="integer" />
        <attr name="subdivisions" format="integer" />

        <attr name="rangeValues" format="reference" />
        <attr name="rangeColors" format="reference" />

        <attr name="textValue" format="string|reference" />
        <attr name="textValueColor" format="color" />
        <attr name="textValueSize" format="float" />
        <attr name="textUnit" format="string|reference" />
        <attr name="textUnitColor" format="color" />
        <attr name="textUnitSize" format="float" />
        <attr name="textShadowColor" format="color" />
        <attr name="scaleStartValue" format="float" />
        <attr name="scaleEndValue" format="float" />
    </declare-styleable>

    <declare-styleable name="VideoTrimmer">
        <attr name="thumbWidth" format="dimension"/>
        <attr name="progressBarWidth" format="dimension"/>
        <attr name="boardWidth" format="dimension"/>
        <attr name="leftThumb" format="reference" />
        <attr name="rightThumb" format="reference" />
    </declare-styleable>

    <declare-styleable name="PercentageView">
        <attr name="defaultColor" format="color"/>
        <attr name="categoryOneColor" format="color"/>
        <attr name="categoryTwoColor" format="color"/>
        <attr name="categoryThreeColor" format="color"/>
    </declare-styleable>


</resources>