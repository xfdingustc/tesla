<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Text -->
    <style name="TextAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#444</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444</item>
    </style>

    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444</item>
    </style>

    <style name="TextAppearanceTiny" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textAppearance">@style/TextAppearanceSmall</item>
        <item name="android:textColor">@color/editText</item>
        <item name="android:textColorHighlight">@color/textSelection</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBox">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearanceTiny</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/btn_check</item>
        <item name="android:textColor">@color/checkBoxText</item>
    </style>

    <!-- RadioButton -->
    <style name="RadioButton" parent="@android:style/Widget">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:textColor">@color/radio_btn_text_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">@drawable/listview</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/btn_radio</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MyRadioButton"
           parent="@android:style/Widget.Material.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>

    <!-- RadioButtonSmall -->
    <style name="RadioButtonSmall" parent="@android:style/Widget">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearanceSmall</item>
        <item name="android:textColor">@color/editText</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">@drawable/listview</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/btn_radio</item>
    </style>

    <!-- Dialog -->
    <style name="BaseDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- Application theme -->
    <style name="AppTheme.NoBackground" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Other sytles -->
    <style name="flatButton">
        <item name="android:background">@drawable/flat_button</item>
        <item name="android:textColor">@color/btnText</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="flatButtonSmall">
        <item name="android:background">@drawable/flat_button</item>
        <item name="android:textColor">@color/btnText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="imageButton1">
        <item name="android:background">@drawable/flat_button_round</item>
        <item name="android:textColor">@color/btnText</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="simpleTitleBar">
        <item name="android:background">@color/title</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/titleText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="hintText">
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="prefTitle">
        <item name="android:textColor">@color/pref_title_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="prefName">
        <item name="android:textColor">@color/pref_name_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="prefValue">
        <item name="android:textColor">@color/pref_value_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="prefHint">
        <item name="android:textColor">@color/pref_hint_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="prefInfo">
        <item name="android:textColor">@color/pref_info_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="horzSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="vertSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@drawable/btn_dialog</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearanceSmall</item>
        <item name="android:textColor">@color/dialog_btn_text_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MapButton">
        <item name="android:background">@drawable/btn_map</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearanceTiny</item>
        <item name="android:textColor">@color/mapButtonText</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MenuItem">
        <item name="android:background">@drawable/btn_dialog</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:textAppearance">@style/TextAppearanceSmall</item>
        <item name="android:textColor">@color/dialog_btn_text_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

</resources>