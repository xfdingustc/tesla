<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="LightRippleOverlay">
        <item name="android:colorControlHighlight">@color/ripple_light</item>
    </style>

    <style name="Styled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/windowBackground</item>
    </style>

    <style name="MyRadioButton"
           parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>

    <style name="ActionButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/action_button_default_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SelectableRippleButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SelectableRippleLayout">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ClipPlaySeekbar" parent="LightTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Widget.AppCompat.Button.Hachi" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="HachiTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/appTextColorPrimary</item>
    </style>

    <style name="HachiTextViewHeadline" parent="HachiTextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HachiTextViewTitle" parent="HachiTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HachiTextViewSubHeader" parent="HachiTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HachiTextViewBody" parent="HachiTextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HachiTextViewCaption" parent="HachiTextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HachiSepatator">
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">0.12</item>
    </style>


    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_context_menu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>