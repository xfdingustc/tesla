<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="LightRippleOverlay">
        <item name="android:colorControlHighlight">@color/ripple_light</item>
    </style>

    <style name="Styled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/windowBackground</item>
    </style>

    <style name="MyRadioButton"
           parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>

    <style name="ActionButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/action_button_default_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SelectableRippleButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SelectableRippleLayout">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ClipPlaySeekbar" parent="LightTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Widget.AppCompat.Button.Hachi" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="HachiTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/appTextColorPrimary</item>
    </style>

    <style name="HachiTextViewHeadline" parent="HachiTextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HachiTextViewTitle" parent="HachiTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HachiTextViewSubHeader" parent="HachiTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HachiTextViewBody" parent="HachiTextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HachiTextViewCaption" parent="HachiTextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HachiSepatator">
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">0.12</item>
    </style>


    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_context_menu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.CommentAuthor" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="SearchWindowAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/fade_out_rapidly</item>
    </style>

    <style name="Widget.Hachi.InlineActionButton" parent="@android:style/Widget.Material.Button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.CommentAuthor</item>
        <item name="android:drawablePadding">@dimen/spacing_micro</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.Hachi.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:searchHintIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Hachi.EmptyText">
        <item name="android:textAppearance">@style/TextAppearance.DialogContent</item>
        <item name="lineHeightHint">24sp</item>
        <item name="android:textColor">@color/app_text_color_primary_light</item>
    </style>


    <style name="HachiOverlay" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <!-- Used to theme dark elements in light themed screens.
             Extend the material dark Action Bar overlay as this contains text styling. -->
    </style>

    <style name="SearchViewTheme" parent="HachiOverlay">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.Hachi.SearchView</item>
    </style>

    <style name="LightTheme.Translucent">
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="LightTheme.Translucent.Login">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:colorButtonNormal">@color/hachi_button</item>
        <item name="android:colorControlHighlight">@color/ripple_light</item>
    </style>


    <style name="LightTheme.Translucent.Overture">
        <item name="android:statusBarColor">@color/style_color_accent</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
    </style>

    <style name="LightTheme.Translucent.Preview">

    </style>


    <style name="LightTheme.Translucent.Startup">
        <item name="android:statusBarColor">@color/light_immersive_bars</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
        <item name="android:colorButtonNormal">@color/hachi_button</item>
        <item name="android:colorControlHighlight">@color/ripple_light</item>
    </style>

    <style name="LightTheme.Translucent.Search">
        <item name="android:windowAnimationStyle">@style/SearchWindowAnimations</item>
        <item name="android:windowEnterTransition">@transition/search_enter</item>
        <item name="android:windowReturnTransition">@transition/search_return</item>
        <item name="android:windowSharedElementEnterTransition">@transition/search_shared_enter
        </item>
        <item name="android:windowSharedElementReturnTransition">@transition/search_shared_return
        </item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
    </style>


    <style name="LightTheme.Translucent.UserProfile">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/light_immersive_bars</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/hachi_user_profile_shared_enter
        </item>
        <item name="android:windowEnterTransition">@transition/hachi_user_profile_enter</item>
        <item name="android:windowReturnTransition">@transition/hachi_user_profile_return</item>
        <item name="android:windowTransitionBackgroundFadeDuration">200</item>

    </style>


    <style name="LightTheme.Translucent.LiveView">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="TextAppearance.DarkButton" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>


</resources>