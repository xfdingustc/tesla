<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/transparent">


        <TextView
            android:id="@+id/tvCameraStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

    </RelativeLayout>

    <com.xfdingustc.far.FixedAspectRatioFrameLayout
        android:id="@+id/liveViewLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        app:farfl_xratio="16dp"
        app:farfl_yratio="9dp">

        <com.waylens.hachi.views.camerapreview.CameraLiveView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.waylens.hachi.views.dashboard.DashboardLayout
            android:id="@+id/dashboard"
            android:layout_width="1920px"
            android:layout_height="1080px"
            android:layout_gravity="center"
            android:visibility="invisible">
        </com.waylens.hachi.views.dashboard.DashboardLayout>


    </com.xfdingustc.far.FixedAspectRatioFrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageButton
            android:id="@+id/btnMicControl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_mic_white_24dp"/>


        <ImageButton
            android:id="@+id/btnFullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_fullscreen_white_24dp"/>

        <ImageButton
            android:id="@+id/btnWaterLine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnFullscreen"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_border_all_white_24dp"/>


        <ImageButton
            android:id="@+id/btnShowOverlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnWaterLine"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_av_timer_white_24dp"/>


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabBookmark"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:src="@drawable/ic_bookmark_white_48dp"/>


</FrameLayout>